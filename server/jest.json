{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coveragePathIgnorePatterns": [
    ".module.ts",
    ".controller.ts",
    "main.ts",
    ".dto.ts",
    "./src/config/*",
    ".mock.ts"
  ],
  "coverageDirectory": "../coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testEnvironment": "node"
}
